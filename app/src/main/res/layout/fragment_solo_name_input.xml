<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:background="@drawable/name_background">

    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Name : "
        android:layout_marginTop="90dp"
        android:textSize="30sp"
        android:shadowRadius="1"
        android:shadowDx="-5"
        android:shadowDy="2"
        android:shadowColor="@color/black"
        android:fontFamily="@font/lazer84"
        android:textColor="@color/pink200"
        />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/lazer84"
        android:hint="Please enter your name"
        android:textColorHint="#CFC9C9"
        android:textSize="20sp" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:backgroundTint="@color/pink200"
        android:shadowColor="@color/black"
        android:shadowDx="-5"
        android:shadowDy="5"
        android:shadowRadius="1"
        android:text="LET'S Save THE EARTH"
        android:textColor="#C8C7C7"
        android:textSize="18sp" />

</LinearLayout>