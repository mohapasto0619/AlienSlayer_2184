<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/multi_gameover">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Game Over "
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="35sp"
        android:fontFamily="@font/lazer84"
        android:shadowColor="@color/black"
        android:textColor="@color/pink100"
        android:shadowRadius="1"
        android:shadowDx="-5"
        android:shadowDy="2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Player 1 : Win "
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:fontFamily="@font/lazer84"
        android:textColor="@color/pink100"
        android:shadowColor="@color/black"
        android:shadowRadius="1"
        android:shadowDx="-5"
        android:shadowDy="2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Player 2 : Lose "
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:fontFamily="@font/lazer84"
        android:textColor="@color/pink100"
        android:shadowColor="@color/black"
        android:shadowRadius="1"
        android:shadowDx="-5"
        android:shadowDy="2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REMATCH"
        android:layout_marginTop="250dp"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:fontFamily="@font/lazer84"
        android:backgroundTint="@color/pink100"
        android:shadowColor="@color/black"
        android:shadowRadius="1"
        android:shadowDx="-5"
        android:shadowDy="2"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/pink100"
        android:fontFamily="@font/lazer84"
        android:text="BACK TO MAIN MENU"
        android:textColor="#F4F0F0"
        android:textSize="25sp"
        android:shadowColor="@color/black"
        android:shadowRadius="1"
        android:shadowDx="-5"
        android:shadowDy="2"/>

</LinearLayout>